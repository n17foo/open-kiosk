{
  "name": "LibreKiosk",
  "version": "1.0.0",
  "main": "index.js",
  "electronMain": "electron-start.js",
  "private": true,
  "scripts": {
    "start": "expo start",
    "android": "expo start --android --non-interactive",
    "ios": "expo start --ios --clear",
    "web": "expo start --web",
    "test": "jest --watchAll",
    "latest": "yarn upgrade --latest && npx expo install --fix",
    "doctor": "npx expo-doctor",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,.jsx,.ts,.tsx,.json,.md}\"",
    "electron": "cross-env EXE_ENV=electron electron electron-start.js",
    "electron:dev": "cross-env EXE_ENV=electron concurrently \"EXPO_WEB_PORT=8081 yarn web\" \"wait-on --timeout 60000 http://localhost:8081 && electron electron-start.js\"",
    "electron:build": "electron-builder"
  },
  "dependencies": {
    "@expo/metro-runtime": "^6.1.2",
    "@expo/vector-icons": "^15.0.3",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-navigation/bottom-tabs": "7.9.0",
    "@react-navigation/native": "7.1.26",
    "@react-navigation/native-stack": "7.9.0",
    "@react-navigation/stack": "7.6.13",
    "eventemitter3": "5.0.1",
    "expo": "54.0.30",
    "expo-camera": "17.0.10",
    "expo-localization": "17.0.8",
    "expo-status-bar": "3.0.9",
    "i18next": "25.7.3",
    "lottie-react-native": "^7.3.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-i18next": "16.5.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-logs": "^5.5.0",
    "react-native-mmkv": "4.1.0",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "5.6.2",
    "react-native-screens": "~4.16.0",
    "react-native-web": "~0.21.2",
    "react-native-worklets": "0.5.1",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@babel/core": "7.28.5",
    "@types/react": "~19.1.10",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-native": "^5.0.0",
    "prettier": "^3.7.4",
    "react-native-dotenv": "3.4.11",
    "typescript": "5.9.3",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.commercefull.LibreKiosk",
    "productName": "LibreKiosk",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}

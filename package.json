{
  "name": "open-kiosk",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "main": "index.js",
  "electronMain": "electron-start.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android --non-interactive",
    "ios": "expo start --ios --clear",
    "web": "expo start --web",
    "desktop": "cross-env EXE_ENV=electron concurrently \"EXPO_WEB_PORT=8081 yarn web\" \"wait-on --timeout 60000 http://localhost:8081 && electron electron-start.js\"",
    "desktop:build": "expo export --platform web && electron-builder",
    "test": "jest --no-coverage",
    "test:coverage": "jest --coverage",
    "latest": "yarn upgrade --latest && npx expo install --fix",
    "doctor": "npx expo-doctor",
    "lint": "npx tsc --noEmit && eslint .",
    "lint:fix": "npx tsc --noEmit && eslint . --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@expo/metro-runtime": "^55.0.6",
    "@expo/vector-icons": "^15.1.1",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-navigation/bottom-tabs": "7.15.2",
    "@react-navigation/native": "7.1.31",
    "@react-navigation/native-stack": "7.14.2",
    "@react-navigation/stack": "7.8.2",
    "eventemitter3": "5.0.4",
    "expo": "55.0.3",
    "expo-camera": "55.0.9",
    "expo-localization": "55.0.8",
    "expo-sqlite": "~55.0.10",
    "expo-status-bar": "55.0.4",
    "i18next": "25.8.13",
    "lottie-react-native": "^7.3.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-i18next": "16.5.4",
    "react-native": "0.83.2",
    "react-native-gesture-handler": "~2.30.0",
    "react-native-keychain": "~10.0.0",
    "react-native-logs": "^5.6.0",
    "react-native-mmkv": "4.1.2",
    "react-native-reanimated": "4.2.1",
    "react-native-safe-area-context": "~5.6.2",
    "react-native-screens": "~4.23.0",
    "react-native-web": "~0.21.2",
    "react-native-worklets": "0.7.2",
    "uuid": "^13.0.0",
    "winston": "^3.19.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.29.0",
    "@types/jest": "29.5.14",
    "@types/react": "~19.2.14",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-native": "^5.0.0",
    "husky": "^9.0.0",
    "jest": "~29.7.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "react-native-dotenv": "3.4.11",
    "ts-jest": "^29.0.0",
    "typescript": "5.9.3",
    "wait-on": "^9.0.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "build": {
    "appId": "com.commercefull.OpenKiosk",
    "productName": "OpenKiosk",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
